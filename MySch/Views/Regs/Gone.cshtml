
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>公共关系</title>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>

    <script type="text/javascript" src="http://res.wx.qq.com/open/js/jweixin-1.2.0.js"></script>

    <link rel="stylesheet" href="https://res.wx.qq.com/open/libs/weui/1.1.2/weui.min.css">
    <script type="text/javascript" src="https://res.wx.qq.com/open/libs/weuijs/1.1.1/weui.min.js"></script>
    <script type="text/javascript">
        $(function () {
            //提示
            var headloading = weui.loading('正在加载...');
            $.post('/Regs/JssdkGo', function (jsres) {
                if (jsres.error) {
                    weui.topTips(jsres.message, 3000);
                } else {
                    wx.config({
                        debug: false,
                        appId: jsres.appid,
                        timestamp: jsres.timestamp,
                        nonceStr: jsres.noncestr,
                        signature: jsres.signature,
                        jsApiList: [
                          'hideAllNonBaseMenuItem',
                          'scanQRCode',
                        ]
                    });

                    //
                    $.post('/Regs/NotFixedCount', function (res) {
                        if (res.error) {
                            weui.topTips(res.message, 3000);
                        } else {
                            $('#regs_master_count').text(res);
                        }
                    })
                    //关闭
                    headloading.hide();
                    $('#regs_master').show();
                    wx.ready(function () {
                        //隐藏所有非基本菜单项
                        wx.hideAllNonBaseMenuItem({
                            success: function () {
                                //weui.alert('已隐藏所有非基本菜单项');
                            }
                        });


                        //申请
                        $('#regs_master_fix').click(function () {
                            var loading = weui.loading('正在加载...');
                            //请求
                            $.post('/Regs/NotFixed', function (res) {
                                loading.hide();
                                if (res.error) {
                                    weui.topTips(res.message, 3000);
                                } else {
                                    //
                                }
                            });
                        });


                        //扫码
                        $('#regs_master_scan').click(function () {

                            wx.scanQRCode({
                                needResult: 1,
                                desc: 'scanQRCode desc',
                                success: function (sres) {
                                    var loading = weui.loading('正在加载...');
                                    $.post('/Regs/UrlByID', { id: sres.resultStr }, function (res) {
                                        if (res.error) {
                                            weui.topTips(res.message, 3000);
                                        } else {
                                            if (res.length != 0) {
                                                var cur = res[0];
                                                wx.previewImage({
                                                    current: cur,
                                                    urls: res
                                                });
                                            } else {
                                                weui.topTips('没有当前学生上传的照片', 3000);
                                            }
                                        }
                                        loading.hide();
                                    });
                                }
                            });

                        });

                        var reg = {
                            NAME: /^[\u4e00-\u9fa5]{2,4}$/,
                        };
                        weui.form.checkIfBlur('#regs_master_form', {
                            regexp: reg
                        });
                        var reg_if = {
                            IFNUM: /^\d{1,2}$/,
                        };
                        weui.form.checkIfBlur('#regs_master_form', {
                            regexp: reg
                        });
                        //根据录取编号查询房主信息
                        $('#regs_master_find').click(function () {
                            weui.form.validate('#regs_master_form', function (error) {
                                if (!error) {
                                    var loading = weui.loading('正在查询...');
                                    var regno = $('#regs_master_form input').val();
                                    $.post('/Regs/UrlByRegNo', { id: regno }, function (res) {
                                        if (res.error) {
                                            weui.topTips(res.message, 3000);
                                        } else {
                                            //
                                        }
                                        loading.hide();
                                    });
                                }
                            }, {
                                regexp: reg
                            });


                        });


                        //提交
                        $('#regs_master_update').click(function () {
                            weui.form.validate('#regs_master_input', function (error) {
                                if (!error) {
                                    var loading = weui.loading('正在提交...');
                                    var data = $('#regs_master_input').serialize();
                                    $.post('/Regs/FixStud', data, function (res) {
                                        loading.hide();
                                        if (res.error) {
                                            weui.topTips(res.message, 3000);
                                        } else {
                                            weui.toast('房产提交成功', 2000);
                                            //
                                        }
                                    })
                                }
                            }, {
                                regexp: reg
                            });
                        });


                        ////通过人员
                        //$.each(res.value, function () {
                        //    var $item = $('<div class="weui-form-preview__item"><label class="weui-form-preview__label"></label><span class="weui-form-preview__value"></span></div>');
                        //    $item.find('label').text(this.key);
                        //    $item.find('span').text(this.value);
                        //    $item.appendTo($('#regs_exam_studs_list'));
                        //});



                    });

                    //错误检测
                    wx.error(function (errores) {
                        weui.alert(JSON.stringify(errores));
                    });
                }
            })
        })
    </script>
</head>
<body ontouchstart>
    <div class="weui-article" id="regs_master" style="display: none;">
        <h1>调动条件</h1>

        <form id="regs_master_form_if">
            <div class="weui-cells weui-cells_form">
                <div class="weui-cell">
                    <div class="weui-cell__hd"><label class="weui-label" style="width:90px;">调动分差</label></div>
                    <div class="weui-cell__bd">
                        <input class="weui-input" type="tel" name="Differ" required="required" pattern="REG_IFNUM" maxlength="2" placeholder="输入学生的录取编号" emptytips="学生录取编号不能为空" notmatchtips="录取编号不正确">
                    </div>
                    <div class="weui-cell__ft">
                        <i class="weui-icon-warn"></i>
                    </div>
                </div>
            </div>
            <div class="weui-cells weui-cells_checkbox">
                <label class="weui-cell weui-check__label" for="regs_exam_choose">
                    <div class="weui-cell__hd">
                        <input type="checkbox" class="weui-check" name="SameSex">
                        <i class="weui-icon-checked"></i>
                    </div>
                    <div class="weui-cell__bd">
                        <p>同性交换</p>
                    </div>
                </label>
            </div>
            <div class="weui-cells weui-cells_checkbox">
                <label class="weui-cell weui-check__label" for="regs_exam_choose">
                    <div class="weui-cell__hd">
                        <input type="checkbox" class="weui-check" name="IsAbs">
                        <i class="weui-icon-checked"></i>
                    </div>
                    <div class="weui-cell__bd">
                        <p>是否绝对值</p>
                    </div>
                </label>
            </div>

            <div class="weui-btn-area">
                <a id="regs_master-if" href="javascript:" class="weui-btn weui-btn_primary">修改：调动条件</a>
            </div>
        </form>

        <h1>调动查询</h1>
        <div class="weui-cells">
            <div class="weui-cell">
                <div class="weui-cell__hd"><label class="weui-label" style="width:90px;">姓名：</label></div>
                <div class="weui-cell__bd">
                    <input class="weui-input" type="text" name="StudName" required="required" pattern="REG_NAME" maxlength="4" placeholder="输入学生的姓名" emptytips="学生姓名不能为空" notmatchtips="学生姓名不正确">
                </div>
                <div class="weui-cell__ft">
                    <i class="weui-icon-warn"></i>
                </div>
            </div>
        </div>

        <div class="weui-btn-area">
            <a id="regs_master-query" href="javascript:" class="weui-btn weui-btn_primary">提交：调动查询</a>
        </div>

        <div class="weui-form-preview" style="margin-top: 20px;">
            <div class="weui-form-preview__hd">
                <div class="weui-form-preview__item">
                    <label class="weui-form-preview__label">学生姓名</label>
                    <em class="weui-form-preview__value">条号、原班级</em>
                </div>
            </div>
            <div class="weui-form-preview__bd">
                <div class="weui-form-preview__item">
                    <label class="weui-form-preview__label">学生姓名</label>
                    <span class="weui-form-preview__value">条号、原班级</span>
                </div>

            </div>
        </div>

        <h1>调动名单</h1>
        <h2>　　调动总数：<span id="reg_master-total_num" style="color:red;">10</span>，实际调动：<span id="reg_master-num" style="color:blue;">1</span></h2>

        @*几个数据模板*@

        <div id="reg_master-modal_student" style="display:none;">
            <div class="weui-form-preview__item" studid="{2}">
                <label class="weui-form-preview__label">{0}</label>
                <span class="weui-form-preview__value">{1}</span>
            </div>
        </div>

        <div id="reg_master-modal_success" style="display:none;">
            <div class="icon-box">
                <i class="weui-icon-success" style="font-size: 45px;"></i>
                <div class="icon-box__ctn">
                    <h3 class="icon-box__title">{0}</h3>
                    <p class="icon-box__desc">{1}</p>
                </div>
            </div>
        </div>

        <div id="reg_master-modal_waiting" style="display:none;">
            <div class="icon-box" studid="{2}">
                <i class="weui-icon-waiting" style="font-size: 45px;"></i>
                <div class="icon-box__ctn">
                    <h3 class="icon-box__title">{0}</h3>
                    <p class="icon-box__desc">{1}</p>
                </div>
            </div>
        </div>

        <div id="reg_master-waiting">
            <div class="icon-box">
                <i class="weui-icon-waiting" style="font-size: 45px;"></i>
                <div class="icon-box__ctn">
                    <h3 class="icon-box__title">{0}</h3>
                    <p class="icon-box__desc">{1}</p>
                </div>
            </div>
        </div>
        <div id="reg_master-success">
            <div class="icon-box">
                <i class="weui-icon-success" style="font-size: 45px;"></i>
                <div class="icon-box__ctn">
                    <h3 class="icon-box__title">{0}</h3>
                    <p class="icon-box__desc">{1}</p>
                </div>
            </div>
        </div>

    </div>

</body>
</html>
