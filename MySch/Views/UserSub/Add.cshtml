@model MySch.Bll.Entity.BllSub

@{
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div style="padding:20px 0px 0px 20px;">
        <div class="form-item-row">
            <div>@Html.LabelFor(a => a.Name)：</div>
            <span class="textbox">
                @Html.TextBoxFor(a => a.Name, new { @class = "textbox-text" })
            </span>
            @Html.ValidationMessageFor(a => a.Name)
        </div>
        <div class="form-item-row">
            <div>@Html.LabelFor(a => a.SName)：</div>
            <span class="textbox">
                @Html.TextBoxFor(a => a.SName, new { @class = "textbox-text" })
            </span>
            @Html.ValidationMessageFor(a => a.SName)
        </div>
        <div class="form-item-row">
            <div>@Html.LabelFor(a => a.Value)：</div>
            <span class="textbox">
                @Html.TextBoxFor(a => a.Value, new { @class = "textbox-text" })
            </span>
            @Html.ValidationMessageFor(a => a.Value)
        </div>
        <div class="form-item-row">
            <div>@Html.LabelFor(a => a.Fixed)：@Html.CheckBoxFor(a => a.Fixed)</div>
        </div>
    </div>
}

<script type="text/javascript">
    $(function () {
        //添加对话框
        DialogAdd('学科添加', 410, 280, '/UserSub/AddToken', '#usersubs-grid');
    })
</script>