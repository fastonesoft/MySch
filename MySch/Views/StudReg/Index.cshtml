<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>新生注册 - 框架</title>

    <style type="text/css">
        .user_focus { height: 80px; overflow: hidden; position: relative; margin: 0 auto; }
        .user_focus .focus_slider { height: 80px; position: absolute; left: 0px; top: 0px; z-index: 111; }
        .user_focus .focus_slider .mask { height: 80px; overflow: hidden; float: left; display: inline; }
        .user_focus .focus_slider ul { height: 80px; margin-left: 0px; overflow: hidden; }
        .user_focus .focus_slider li { float: left; width: 96px; height: 64px; display: inline; overflow: hidden; margin: 8px 0px 0px 8px; }
        .user_focus .focus_slider li img { width: 96px; height: 64px; }
        .user_focus .focus_slider li a { display: block; width: 96px; height: 64px; overflow: hidden; background: #000; }
    </style>

    <script type="text/javascript">
        $(function () {


            //点击动作
            studreg = {
                add: function () {
                    //禁用
                    $('.easyui-linkbutton[iconcls="icon-add"]').linkbutton('disable');
                    //打开窗口
                    $.post('/StudReg/GetHtml', function (d) {
                        if (d.error) {
                            $.messager.alert('错误提示', d.message, 'error');
                        } else {
                            alert(d);
                           // $('<div id="dialog-form">').appendTo('#body').html(d);
                        }
                    });
                },
                edit: function () {
                    var row = $('#studreg-grid').datagrid('getSelected');
                    if (!row) {
                        $.messager.alert('错误提示', '未选定修改的帐号！', 'error');
                        return false;
                    }
                    //禁用
                    $('.easyui-linkbutton[iconcls="icon-edit"]').linkbutton('disable');
                    //打开窗口
                    $.post('/StudReg/EditReg', { id: row.ID }, function (d) {
                        if (d.error) {
                            $.messager.alert('错误提示', d.message, 'error');
                        } else {
                            $('<div id="dialog-form">').appendTo('#body').html(d);
                        }
                    });
                },
                del: function () {
                    var row = $('#studreg-grid').datagrid('getSelected');
                    if (!row) {
                        $.messager.alert('错误提示', '未选定删除的帐号！', 'error');
                        return false;
                    }
                    //禁用
                    $('.easyui-linkbutton[iconcls="icon-no"]').linkbutton('disable');
                    //打开窗口
                    $.post('/StudReg/DelReg', { id: row.ID }, function (d) {
                        if (d.error) {
                            $.messager.alert('错误提示', d.message, 'error');
                        } else {
                            $('<div id="dialog-form">').appendTo('#body').html(d);
                        }
                    });
                },
                search: function () {
                    var text = $.trim($('#studreg-grid-text').val());
                    if (text.length == 0) {
                        //刷新
                        $('#studreg-grid').datagrid('load');
                    } else {
                        $('#studreg-grid').datagrid('loading');
                        //读取部分
                        $.post('/StudReg/SearchReg', { text: text }, function (d) {
                            if (d.error) {
                                $.messager.alert('错误提示', d.message, 'error');
                            } else {
                                $('#studreg-grid').datagrid('loadData', d);
                                $('#studreg-grid').datagrid('loaded');
                            }
                        });
                    }
                },
            }

            //数据表格
            $('#studreg-grid').datagrid({
                fit: true,
                striped: true,
                rownumbers: true,
                fitColumns: false,
                remoteSort: false,
                singleSelect: true,
                checkOnSelect: true,
                //url: '/Admin/UsersPage',
                loadMsg: '数据加载中，请稍候……',

                columns: [[
                    {
                        title: '学校名称',
                        field: 'fromSch',
                        align: 'center',
                        sortable: true,
                        width: 200
                    },
                    {
                        title: '姓名',
                        field: 'Name',
                        align: 'center',
                        sortable: true,
                        width: 80
                    },
                    {
                        title: '身份证号',
                        field: 'ID',
                        align: 'center',
                        sortable: true,
                        width: 150
                    },
                    {
                        title: '班级',
                        field: 'fromClass',
                        align: 'center',
                        sortable: true,
                        width: 100
                    },
                    {
                        title: '联系电话',
                        field: 'Tel',
                        align: 'center',
                        sortable: true,
                        width: 100
                    },
                    {
                        title: '全国学籍号',
                        field: 'nationID',
                        align: 'center',
                        sortable: true,
                        width: 150
                    },
                    {
                        title: '就读状态',
                        field: 'readState',
                        align: 'center',
                        sortable: true,
                        width: 70
                    },
                    {
                        title: '问题学籍',
                        field: 'isProblem',
                        align: 'center',
                        sortable: true,
                        width: 70,
                        formatter: function (value, row, index) {
                            //不输出任何东西
                        },
                        styler: function (value, row, index) {
                            if (value) {
                                return "background:url('/Content/themes/icons/ico_del.png') no-repeat center center;";
                            }
                        }
                    },
                    {
                        title: '是否择校',
                        field: 'schChoose',
                        align: 'center',
                        sortable: true,
                        width: 70,
                        formatter: function (value, row, index) {
                            //不输出任何东西
                        },
                        styler: function (value, row, index) {
                            if (value) {
                                return "background:url('/Content/themes/icons/ico_yes.gif') no-repeat center center;";
                            }
                        }
                    },
                    {
                        title: '是否报名',
                        field: 'Reged',
                        align: 'center',
                        sortable: true,
                        width: 70,
                        formatter: function (value, row, index) {
                            //不输出任何东西
                        },
                        styler: function (value, row, index) {
                            if (value) {
                                return "background:url('/Content/themes/icons/ico_yes.gif') no-repeat center center;";
                            }
                        }
                    },
                ]],

                toolbar: '#studreg-grid-tool',
                pagination: false,
                pageSize: 100,
                pageList: [100, 200, 500],
                pageNumber: 1,
            });

            $('#studreg-grid').datagrid({
                data: [{
                    fromSch: '泰州市姜堰区实验初级中学',
                    Name: '看过的',
                    ID: '321284200508150254',
                    fromClass: '小学五年级',
                    Tel:'13852657065',
                    nationID: 'G321284200508150254',
                    readState: '正常',
                    isProblem: true,
                    schChoose: true,
                    Reged:false
                }]
            });


            //布局
            $('#studreg-lay').layout({
                border: true,
                fit: true
            });

        })
    </script>
</head>
