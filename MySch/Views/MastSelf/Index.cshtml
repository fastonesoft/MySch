@{
    Layout = null;
    //MastSelf/Index
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>我的班级</title>

    <script type="text/javascript">
        $(function () {

            //点击动作
            masterselfins = {
                edit: function () {
                    DataGridRow('#masterself-ins-grid', '/MastSelf/Edit');
                },
                unfix: function () {
                    DataGridRows('#masterself-ins-grid', '/MastSelf/UnFix');
                },
                out: function () {
                    DataGridRow('#masterself-ins-grid', '/MastSelf/Out');
                },
                search: function () {
                    var text = $('#masterself-ins-text').val();
                    var param = {
                        id: node.id,
                        memo: node.memo,
                        text: text,
                    }
                    DataGridSearchQuery('#masterself-ins-text', '#masterself-ins-grid', '#masterself-outs-grid', '/MastSelf/DataGrid', '/MastSelf/DataGrid2', param);
                },
            }

            masterselfouts = {
                back: function () {
                    DataGridRow('#masterself-outs-grid', '/MastSelf/Back');
                },
            }

            //数据表格
            $('#masterself-ins-grid').datagrid({
                fit: true,
                border: false,
                striped: true,
                rownumbers: true,
                fitColumns: false,
                remoteSort: false,
                singleSelect: false,
                checkOnSelect: true,
                url: '/MastSelf/DataGrid',
                loadFilter: function (d) {
                    if (d.error) {
                        $.messager.alert('错误提示', d.message, 'error');
                        return { total: 0, rows: [] };
                    } else {
                        return d;
                    }
                },

                columns: [[
                    { field: 'ck', checkbox: true },
                    { title: '班级', field: 'BanName', align: 'center', sortable: true, width: 110 },
                    { title: '身份证号', field: 'CID', align: 'center', sortable: true, width: 150 },
                    { title: '姓名', field: 'StudName', align: 'center', sortable: true, width: 60 },
                    {
                        title: '性别', field: 'StudSex', align: 'center', sortable: true, width: 50,
                        formatter: function (value, row, index) {
                            if (value)
                                return parseInt(value) % 2 == 0 ? "女" : "男";
                        },
                    },
                    { title: '学生来源', field: 'ComeName', align: 'center', sortable: true, width: 70 },
                    {
                        title: '资料完整', field: 'Checked', halign: 'center', sortable: true, width: 70,
                        formatter: function (value, row, index) {
                            //不输出任何东西
                            //return value.ok ? null : value.message;
                        },
                        styler: function (value, row, index) {
                            if (value) {
                                return "background:url('/Content/themes/icons/ico_yes.gif') no-repeat center center;";
                            }
                        }
                    },
                    {
                        title: '是否确认', field: 'Fixed', halign: 'center', sortable: true, width: 70,
                        formatter: function (value, row, index) {
                            //不输出任何东西
                            //return value.ok ? null : value.message;
                        },
                        styler: function (value, row, index) {
                            if (value) {
                                return "background:url('/Content/themes/icons/ico_yes.gif') no-repeat center center;";
                            }
                        }
                    },
                ]],

                toolbar: '#masterself-ins-grid-tool',
                pagination: true,
                pageSize: 100,
                pageList: [100, 200, 500],
                pageNumber: 1,
            });


            //数据表格
            $('#masterself-outs-grid').datagrid({
                fit: true,
                border: false,
                striped: true,
                rownumbers: true,
                fitColumns: false,
                remoteSort: false,
                singleSelect: true,
                checkOnSelect: true,
                url: '/MastSelf/DataGrid2',
                loadFilter: function (d) {
                    if (d.error) {
                        $.messager.alert('错误提示', d.message, 'error');
                        return { total: 0, rows: [] };
                    } else {
                        return d;
                    }
                },

                columns: [[
                    { title: '分级', field: 'StepName', align: 'center', sortable: true, width: 60 },
                    { title: '姓名', field: 'StudName', align: 'center', sortable: true, width: 60 },
                    { title: '身份证号', field: 'CID', align: 'center', sortable: true, width: 150 },
                    { title: '离校说明', field: 'OutName', align: 'center', sortable: true, width: 70 },
                ]],

                toolbar: '#masterself-outs-grid-tool',
                pagination: false,
                pageSize: 100,
                pageList: [100, 200, 500],
                pageNumber: 1,
            });


            $('#masters-lay').layout({
                fit: true,
                border: true,
            });


        })

    </script>
</head>
<body>
    <div id="masters-lay">
        <div data-options="region:'center',border:true, title:'在校生'">
            <table id="masterself-ins-grid"></table>

            <div id="masterself-ins-grid-tool">
                <table cellpadding="0" cellspacing="0">
                    <thead>
                        <tr>
                            <td>
                                <a href="javascript:void(0);" class="easyui-splitbutton" menu="#masterself-mm-edit" iconcls="icon-edit">变更</a>
                            </td>
                            <td>
                                <div class="datagrid-btn-separator"></div>
                            </td>
                            <td>
                                <a href="javascript:void(0);" class="easyui-splitbutton" menu="#masterself-mm-remove" iconcls="icon-remove">减少</a>
                            </td>
                            <td style="width:8px;"></td>
                            <td>
                                <span class="textbox">
                                    <input class="textbox-text" id="masterself-ins-text" style="width:165px;" />
                                </span>
                            </td>
                            <td style="width:8px;"></td>
                            <td>
                                <a href="javascript:void(0);" class="easyui-linkbutton" iconcls="icon-search" plain="true" onclick="masterselfins.search();">查询</a>
                            </td>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div data-options="region:'east',border:true, title:'不在校'" style="width:380px;">
            <table id="masterself-outs-grid"></table>
            <div id="masterself-outs-grid-tool">
                <table cellpadding="0" cellspacing="0">
                    <thead>
                        <tr>
                            <td>
                                <a href="javascript:void(0);" class="easyui-linkbutton" iconcls="icon-undo" plain="true" onclick="masterselfouts.back();">回校</a>
                            </td>
                            <td>
                                <div class="datagrid-btn-separator"></div>
                            </td>
                            <td>
                                <a href="javascript:void(0);" class="easyui-linkbutton" iconcls="icon-edit" plain="true" onclick="masterselfouts.edit();">设置</a>
                            </td>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>

    <div id="masterself-mm-edit" style="width:150px;">
        <div iconcls="icon-reload" onclick="masterselfins.unfix();">状态...</div>
        <div class="menu-sep"></div>
        <div iconcls="icon-man" onclick="masterselfins.edit();">学生信息...</div>
    </div>
    <div id="masterself-mm-remove" style="width:150px;">
        <div onclick="masterselfins.drop();">休学...</div>
        <div class="menu-sep"></div>
        <div iconcls="icon-clear" onclick="masterselfins.out();">离校...</div>
    </div>
</body>
</html>
